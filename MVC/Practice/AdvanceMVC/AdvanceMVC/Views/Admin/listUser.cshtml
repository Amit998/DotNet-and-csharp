@model IEnumerable<AdvanceMVC.tbl_User>


<h2>List Users</h2>

<div class="container">
    <div class="row">

        @using (Html.BeginForm("listUser", "Admin", FormMethod.Post))
        {
            <div class="form-horizontal">
                <div class="row">
                    <div class="form-group">


                        <div class="col-md-6">
                            @Html.Label("Search", new { htmlAttributes = new { @class = "form-control" } })

                        </div>

                        <div class="col-md-6">
                            @Html.TextBox("searchText",null, new { htmlAttributes = new { @class = "form-control" ,@placeholder="Search your text", @style="max-width:100%" } })

                        </div>


                        <div class="col-md-6">
                            <button class="btn btn-primary" type="submit">Submit</button>

                        </div>
                    </div>
                </div>

            </div>
        }


    </div>



    

    <div class="row">

        <div class="col-md-12">

            <table class="table">
                <tr>
                    <th>
                        @*@Html.DisplayNameFor(model => model.UserName)*@

                        @Html.ActionLink("Username","listUser",new {  SortOrder= ViewBag.SortOrder == null ?"Asc" : ViewBag.SortOrder== "Asc"? "Dsc": "Asc", SortBy="UserName"})
                    </th>
                    <th>
                        @Html.ActionLink("Email", "listUser", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder == "Asc" ? "Dsc" : "Asc", SortBy = "Email" })
                       
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>

                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>


                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.UserId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
                        </td>
                    </tr>
                }

            </table>


        </div>

    </div>


</div>

